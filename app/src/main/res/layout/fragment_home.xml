<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">
    <TextView
        android:id="@+id/txtNewHit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Hit"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/scvNewHit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNewHit">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/nnkce"
                android:paddingLeft="3dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/a"
                android:paddingLeft="3dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/b"
                android:paddingLeft="3dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/nnkce"
                android:paddingLeft="3dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/txtBXH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Hit 100"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/scvNewHit"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <HorizontalScrollView
        android:id="@+id/scvBXH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBXH">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/nnkce"
                android:paddingLeft="3dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/a"
                android:paddingLeft="3dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/b"
                android:paddingLeft="3dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/nnkce"
                android:paddingLeft="3dp"/>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>